{
  "baseURL": "http://api.openweathermap.org/data/2.5/",
  "entrypoints": {
    "type": { 
      "onecall": "onecall", 
      "forecast": "forecast"
    },
    "byCityId": "id",
    "byCityName": "q",
    "exclude": [
      "minutely",
      "hourly",
      "alerts"
    ]
  },
  "units": "metric",
  "forecastDays": 3
}
