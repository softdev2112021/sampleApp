{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "*.log"
  ],
  "include": [
    "src"
  ]
}
